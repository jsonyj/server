<div class="breadcrumbs" id="breadcrumbs">
  <script type="text/javascript">
    try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
  </script>

  <ul class="breadcrumb">
    <li class="active">班级一览</li>
  </ul><!-- /.breadcrumb -->

</div>

<div class="page-content">
  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->
      <form method="get" name="search_form" class="search-form" id="search-form">
          <input type="hidden" name="c" value="class" />
          <input type="hidden" name="a" value="index" />

          <table class="table table-bordered table-condensed ">
              <tr>
                <th>学校名称：</th>
                <td><input type="text" name="sh[school_title]" value="<{$sh.school_title}>" size="30"></td>
                <th>班级名称：</th>
                <td><input type="text" name="sh[class_title]" value="<{$sh.class_title}>" size="30"></td>
                <td class="button" style="width:130px">
                    <div><button type="submit" class="btn btn-primary btn-xs"><i class="ace-icon fa fa-search"></i> 搜索</button>
                    <a href="?c=class&a=index" class="btn btn-default btn-xs"><i class="ace-icon fa fa-undo"></i> 重置</a></div>
                </td>
              </tr>
          </table>

        <{include file="../Common/paginate.html"}>
      </form>
      
      <div class='clearfix'></div>
      <div class="text-right toolbar">
        <a style="width:80px;" class="btn btn-info btn-sm" href="?c=class&a=input&pc=class&pa=index">新增</a>
      </div>
      <div class="table-responsive">
      <table class="table table-bordered table-hover">

          <col width="260" />
          <col />
          <col width="80" />
          <col width="70" />
          <col width="150" />
          <col width="101" />

          <tr>
            <th>班级名称</th>
            <th>学校名称</th>
            <th>开学日期</th>
            <th>有效状态</th>
            <th <{brave_order code=$code.order.class array=sh key='a' name='field' txt="创建时间"}>></th>
            <th>操作</th>
          </tr>

          <{foreach from=$classList item=class key=key}>
          <tr id="row_<{$admin.id}>">
            <td><{$class.title}></td>
            <td><{$class.school_title}></td>
            <td><{$class.start}></td>
            <td class="text-center"><{$code.status[$class.status].name}></td>
            <td><{$class.created}></td>
            <td>
              <a class="btn btn-xs btn-danger" href="javascript:void(0);" onclick="linkConfirm('确定删除吗？', '?c=class&a=delete&id=<{$class.id}>')">删除</a>
              <a class="btn btn-xs btn-primary" href="?c=class&a=input&pc=class&pa=index&id=<{$class.id}>">编辑</a>
            </td>
          </tr>
          <{/foreach}>

      </table>
      </div>
      <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
  </div><!-- /.row -->
</div><!-- /.page-content -->

<script>
function exportExcel() {
  var form = $('#search-form');
  location.href= '?' + form.serialize() + '&export=excel';
}

</script>
<div class="breadcrumbs" id="breadcrumbs">
  <script type="text/javascript">
    try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
  </script>

  <ul class="breadcrumb">
    <li class="active">设备一览</li>
  </ul><!-- /.breadcrumb -->

</div>

<div class="page-content">
  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->
      <form method="get" name="search_form" class="search-form" id="search-form">
          <input type="hidden" name="c" value="device" />
          <input type="hidden" name="a" value="index" />

          <table class="table table-bordered table-condensed ">
              <tr>
                <th>编号：</th>
                <td><input type="text" name="sh[no]" value="<{$sh.no}>" size="30"></td>
                <th>学校：</th>
                <td><input type="text" name="sh[school_title]" value="<{$sh.school_title}>" size="30"></td>
                <td class="button" style="width:130px">
                    <div><button type="submit" class="btn btn-primary btn-xs"><i class="ace-icon fa fa-search"></i> 搜索</button>
                    <a href="?c=device&a=index" class="btn btn-default btn-xs"><i class="ace-icon fa fa-undo"></i> 重置</a></div>
                </td>
              </tr>
          </table>

        <{include file="../Common/paginate.html"}>
      </form>
      
      <div class='clearfix'></div>
      <div class="text-right toolbar">
        <a style="width:80px;" class="btn btn-info btn-sm" href="?c=device&a=input&pc=device&pa=index">新增</a>
      </div>
      <div class="table-responsive">
      <table class="table table-bordered table-hover">

          <col width="260" />
          <col />
          <col width="70" />
          <col width="150" />
          <col width="101" />

          <tr>
            <th>编号</th>
            <th>学校名称</th>
            <th>版本类型</th>
            <th>主版本号</th>
            <th>群版本号</th>
            <th>设备类型</th>
            <th>有效状态</th>
            <th <{brave_order code=$code.order.default array=sh key='a' name='field' txt="创建时间"}>></th>
            <th>操作</th>
          </tr>

          <{foreach from=$deviceList item=device key=key}>
          <tr id="row_<{$device.id}>">
            <td><{$device.no}></td>
             <td><{$device.school_title}></td>
             <td><{$device.version_type}></td>
             <td><{$device.main_version}></td>
             <td><{$device.branch_version}></td>
             <td><{$device.model}></td>
            <td class="text-center"><{$code.status[$device.status].name}></td>
            <td><{$device.created}></td>
            <td>
              <a class="btn btn-xs btn-danger" href="javascript:void(0);" onclick="linkConfirm('确定删除吗？', '?c=device&a=delete&id=<{$device.id}>')">删除</a>
              <a class="btn btn-xs btn-primary" href="?c=device&a=input&pc=device&pa=index&id=<{$device.id}>">编辑</a>
            </td>
          </tr>
          <{/foreach}>

      </table>
      </div>
      <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
  </div><!-- /.row -->
</div><!-- /.page-content -->

<script>
</script>
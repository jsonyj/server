<div class="breadcrumbs" id="breadcrumbs">
  <script type="text/javascript">
    try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
  </script>

  <ul class="breadcrumb">
    <li class="active">会员列表</li>
  </ul><!-- /.breadcrumb -->

</div>

<div class="page-content">
  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->
      <form method="get" name="search_form" class="search-form" id="search-form">
          <input type="hidden" name="c" value="user" />
          <input type="hidden" name="a" value="index" />

          <table class="table table-bordered table-condensed ">
              <tr>
                <th>手机号码：</th>
                <td><input type="text" name="sh[phone]" value="<{$sh.phone}>" size="30"></td>
                <th>昵称：</th>
                <td><input type="text" name="sh[nick]" value="<{$sh.nick}>" size="30"></td>
                <td class="button" style="width:130px">
                    <div><button type="submit" class="btn btn-primary btn-xs"><i class="ace-icon fa fa-search"></i> 搜索</button>
                    <a href="?c=user&a=index" class="btn btn-default btn-xs"><i class="ace-icon fa fa-undo"></i> 重置</a></div>
                </td>
              </tr>
          </table>

        <{include file="../Common/paginate.html"}>
      </form>
      
      <div class='clearfix'></div>
      <div class="text-right toolbar">
        <div class="btn-group">
          <button style="width:80px;" class="btn btn-info btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">发送消息 <span class="caret"></span></button>
          <ul class="dropdown-menu dropdown-menu-right">
            <li><a href="javascript:void(0);" onclick="exportExcel();">选择用户</a></li>
            <li><a href="javascript:void(0);" onclick="exportExcel();">全部用户</a></li>
          </ul>
        </div>
      </div>
      <div class="table-responsive">
      <table class="table table-bordered table-hover">

          <col />
          <col width="70" />
          <col width="50" />
          <col width="150" />

          <tr>
            <th>手机号码</th>
            <th>昵称</th>
            <th>性别</th>
            <th <{brave_order code=$code.order.default array=sh key='a' name='field' txt="创建时间"}>></th>
          </tr>

          <{foreach from=$userList item=user key=key}>
          <tr id="row_<{$admin.id}>">
            <td><{$user.name}></td>
            <td><{$user.phone}></td>
            <td><{$user.nick}></td>
            <td><{$user.role_title}></td>
            <td><{$code.sex[$user.gender].name}></td>
            <td><{$user.province}></td>
            <td><{$user.city}></td>
            <td><{$user.district}></td>
            <td><{$user.created}></td>
          </tr>
          <{/foreach}>

      </table>
      </div>
      <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
  </div><!-- /.row -->
</div><!-- /.page-content -->

<script>
function exportExcel() {
  var form = $('#search-form');
  location.href= '?' + form.serialize() + '&export=excel';
}

</script>
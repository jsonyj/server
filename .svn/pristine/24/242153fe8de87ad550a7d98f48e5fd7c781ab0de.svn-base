  <script>

    $(document).ready(function(){
        $.ajax({
            type: "POST",
            url:"http://video.didano.com/video/client/post/channel_get_by_student/"+<{$student.id}>,
            dataType: 'JSON',
            success: function(rs){
                if(rs.data.num > 0){
                    $('#watch-icon').removeClass('hidden');
                }
            },
        });

    });
    $(".img_click").click(function(){
        $("#img_tishi").modal('show');
        $('#img_tishi').find('.modal-dialog').css({  
                'margin-top':'150px'
        });
    });
    $(function() {
        xiaoxiTishi();
        function  xiaoxiTishi(){
            $.get('?c=public&a=ajaxMessageTishi', function(rs){
                if(rs.code == 0){
                    $('.xiaoxi-tishi').removeClass('hidden');
                }else{
                    $('.xiaoxi-tishi').addClass('hidden');
                }
            }, 'json');
        }
    });



  </script>
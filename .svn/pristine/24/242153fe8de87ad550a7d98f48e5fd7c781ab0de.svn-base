 
    <!--首页 index -->
    <div class="ui-header-w">
        <div class="container-fluid">
            <div class="row">
                  <div class="inner">
                     <{if $student_list}>
                        <{foreach from=$student_list item=val}>
                            <a class="btn btn-lg btn-default col-xs-12 <{if $student_list|count == 1}>hidden<{/if}> <{if $val.id ==$student.id}>btn-green-bk<{else}><{/if}>" href="?c=parent&a=index&studentId=<{$val.id}>"><{$val.name}></a>
                        <{/foreach}>
                    <{/if}>
                </div>
            </div>
        </div>
    </div>
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="section">
        <div class="container">
            <div class="row parent-index-div">
                <div class="col-xs-12 padding-lrq-10">
                    <h4 class="index-h4 al-font-weight">宝贝首页 <span></span></h4>
                    <div class="col-xs-6 padding-lrq-10">
                        <img class="width-100  img_click al-index-pic" src="<{$smarty.const.APP_OSS_URL}><{$student.studentDetection.file_path}>"/>
                    </div>
                    <div class="col-xs-6 padding-lrq-10">
                        <div class="parent-div1">
                           <p>  <b class="">姓名：</b>
                           <span class="al-homePage-color"><{$student.name}></span></p>
                        </div>
                        <div class="parent-div1">
                            <p><b class="">班级：</b>
                            <span class="al-homePage-color"><{$student.class_title}></span></p>
                        </div>
                        <hr class="hr-top-10 al-hr-top-15"/>
                        <div class="parent-div1">
                            <p><b class="">最新身高：</b>
                            <span class="al-homePage-color"><{if $student.studentDetection}><{$student.studentDetection.height/10}> cm<{else}>暂无数据<{/if}></span></p>
                        </div>
                        <div class="parent-div1">
                            <p><b class="">最新体重：</b> 
                            <span class="al-homePage-color"><{if $student.studentDetection}><{$student.studentDetection.weight/1000}> kg<{else}>暂无数据<{/if}></span></p>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12">
                    <hr class="al-hr-top-5"/>
                    <div class="parent-div2" onclick="window.location.href='?c=parent&a=setting&studentId=<{$student.id}>'">
                        <span class="col-xs-6 padding-lrq-10"><b>生日：</b><{$student.birthday}> </span>
                        <span class="col-xs-6 padding-lrq-10 position-relative"><b>小名：</b>
                        <{if $student.nickname}><{$student.nickname}><{else}>暂无设置<{/if}><a class="parent-index-bianji" href="?c=parent&a=setting&studentId=<{$student.id}>"><img src="./img/sanjiao_03.png"/></a></span>
                        <span class="col-xs-6 padding-lrq-10"><b>性别：</b>
                        <{if $student.gender}><{if $student.gender==1}>男<{else}>女<{/if}><{else}>暂无设置<{/if}></span>
                        <span class="col-xs-6 padding-lrq-10"><b>梦想：</b><{if $student.dream_id}><{$student.dream_id}><{else}>暂无设置<{/if}></span>  
                        <span class="col-xs-12 padding-lrq-10"><b>爱好：</b><{if $student.hobby}><{$student.hobby}><{else}>暂无设置<{/if}></span>
                    </div>
                </div>
                <div class="col-xs-12">
                    <hr class="al-hr-bottom-5"/>
                    <div class="parent-div3">
                            <span class="col-xs-12 padding-lrq-10"><b>老师评语：</b>  <{if $student.comment}>
                            <{$student.comment}><{else}>暂无评语<{/if}></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

    <div class="modal fade" id="img_tishi" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog " role="document">
        <div class="modal-content">
            <span class="close_bi hidden" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></span>
            <div class="modal-body" style="height:300px;">
               <img class="width-100" src="<{$smarty.const.APP_OSS_URL}><{$student.studentDetection.org_img_url}>"/>
            </div>
